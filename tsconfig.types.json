{
    "compilerOptions": {
      "noEmit": false,
      "composite": true,
      "module": "es2015",
      "target": "esnext",
      "allowSyntheticDefaultImports":true,
      "importHelpers": false,
      "removeComments": false,
      "declaration": true,
      "declarationDir": "./dist/types",
      "emitDeclarationOnly": true,
      "moduleResolution":"node",
      "rootDir":"./src",
      "experimentalDecorators":true,
      "baseUrl": "./src",
    },
    "include": [
      "./src/**/*.ts",
    ],
    "exclude": [
      "./src/**/*.prod.ts"
    ]
  }